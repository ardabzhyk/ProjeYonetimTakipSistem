@model ProjeYonetimTakipSistem.Models.Gorev

@{
    ViewData["Title"] = "Görev Düzenle";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>
    <h4>@Model.Ad</h4>

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                
                <div class="form-group mb-3">
                    <label asp-for="ProjeId" class="control-label">Proje</label>
                    <select asp-for="ProjeId" class="form-control" asp-items="ViewBag.ProjeId"></select>
                    <span asp-validation-for="ProjeId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Ad" class="control-label"></label>
                    <input asp-for="Ad" class="form-control" />
                    <span asp-validation-for="Ad" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Aciklama" class="control-label"></label>
                    <textarea asp-for="Aciklama" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Aciklama" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="AtananKullaniciId" class="control-label">Atanan Kullanıcı</label>
                    <select asp-for="AtananKullaniciId" class="form-control" asp-items="ViewBag.AtananKullaniciId">
                        <option value="">-- Kullanıcı Seçin --</option>
                    </select>
                    <span asp-validation-for="AtananKullaniciId" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="BaslangicTarihi" class="control-label"></label>
                    <input asp-for="BaslangicTarihi" class="form-control" type="date" />
                    <span asp-validation-for="BaslangicTarihi" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="BitisTarihi" class="control-label"></label>
                    <input asp-for="BitisTarihi" class="form-control" type="date" />
                    <span asp-validation-for="BitisTarihi" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Durum" class="control-label"></label>
                    <select asp-for="Durum" class="form-control" asp-items="Html.GetEnumSelectList<GorevDurumu>()"></select>
                    <span asp-validation-for="Durum" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                    <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 