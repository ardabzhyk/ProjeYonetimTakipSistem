@model ProjeYonetimTakipSistem.Models.Gorev

@{
    ViewData["Title"] = "Görev Sil";
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger" role="alert">
                        Bu görevi silmek istediğinize emin misiniz?
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Ad)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Ad)</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Aciklama)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Aciklama)</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.BaslangicTarihi)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.BaslangicTarihi)</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.BitisTarihi)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.BitisTarihi)</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Oncelik)</dt>
                        <dd class="col-sm-9">
                            <span class="badge @(Model.Oncelik == GorevOnceligi.Dusuk ? "bg-success" :
                                               Model.Oncelik == GorevOnceligi.Orta ? "bg-warning" :
                                               "bg-danger")">
                                @Html.DisplayFor(model => model.Oncelik)
                            </span>
                        </dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Durum)</dt>
                        <dd class="col-sm-9">
                            <span class="badge @(Model.Durum == GorevDurumu.Baslamadi ? "bg-secondary" :
                                               Model.Durum == GorevDurumu.DevamEdiyor ? "bg-primary" :
                                               Model.Durum == GorevDurumu.Tamamlandi ? "bg-success" :
                                               "bg-danger")">
                                @Html.DisplayFor(model => model.Durum)
                            </span>
                        </dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Proje)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Proje.Ad)</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.AtananKullanici)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.AtananKullanici.Email)</dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">Sil</button>
                        <a asp-action="Index" class="btn btn-secondary">İptal</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 